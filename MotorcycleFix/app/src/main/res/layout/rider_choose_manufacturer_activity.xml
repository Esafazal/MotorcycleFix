<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RiderFragments.SettingsFragments.ChooseManufacturer">

   <ListView
       android:id="@+id/manufacturerListView"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
   </ListView>

   <Button
       android:id="@+id/selectedManufacturers"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_margin="7sp"
       android:layout_marginStart="8dp"
       android:layout_marginEnd="8dp"
       android:layout_marginBottom="8dp"
       android:background="@color/colorblack"
       android:text="OK"
       android:textColor="@color/white"
       android:textSize="25sp"
       android:textStyle="bold"
       android:visibility="visible"
       app:layout_constraintBottom_toBottomOf="@+id/manufacturerListView"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent" />


   <ProgressBar
       android:id="@+id/chooseMakeProgress"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="8dp"
       android:layout_marginTop="8dp"
       android:layout_marginEnd="8dp"
       app:layout_constraintBottom_toBottomOf="@+id/manufacturerListView"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="@+id/manufacturerListView"
       android:visibility="visible"/>

</androidx.constraintlayout.widget.ConstraintLayout>