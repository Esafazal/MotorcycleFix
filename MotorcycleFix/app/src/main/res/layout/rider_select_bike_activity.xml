<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RiderFragments.WorkshopFragments.SelectBike">

    <ListView
        android:id="@+id/selectBikeListview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>

    <FrameLayout
        android:id="@+id/vehicleFrame"
        android:layout_width="match_parent"
        android:layout_height="70sp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/colorAsh">

        <Button
            android:id="@+id/selectBikeAddButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/add_vehicle"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@color/yelloOrange"
            android:layout_margin="10sp"/>
    </FrameLayout>

    <ProgressBar
        android:id="@+id/selectBikeProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/selectBikeListview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>