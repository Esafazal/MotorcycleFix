<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MechanicFragments.BookingFragments.AcceptedBookings">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="7sp"
        app:cardElevation="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp">

            <TextView
                android:id="@+id/reqBikeModelPast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10sp"
                android:text="Hero Hunk 2011"
                android:textColor="@color/colorblack"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />



            <TextView
                android:id="@+id/reqRiderNamePast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Esa Fazal"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/reqBikeModelPast" />

            <RatingBar
                android:id="@+id/rating"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/reqRiderNamePast" />

            <TextView
                android:id="@+id/bookingIdStatic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Booking No: "
                android:textColor="@color/colorblack"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rating" />

            <TextView
                android:id="@+id/serviceTypeStatic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Service Type: "
                android:textColor="@color/colorblack"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/riderNumberD" />

            <TextView
                android:id="@+id/riderNumberS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Rider Mobile: "
                android:textColor="@color/colorblack"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bookingIdDynamicPast" />

            <TextView
                android:id="@+id/riderNumberD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:clickable="true"
                android:autoLink="phone"
                android:textIsSelectable="true"
                android:focusableInTouchMode="true"
                android:textColor="@color/colorblack"
                android:textSize="15sp"
                android:textStyle="italic"
                app:layout_constraintStart_toEndOf="@+id/serviceTypeStatic"
                app:layout_constraintTop_toBottomOf="@+id/bookingIdStatic" />

            <TextView
                android:id="@+id/serviceDateStatic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Service Date: "
                android:textColor="@color/colorblack"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/serviceTypeStatic" />

            <TextView
                android:id="@+id/acceptedRepairCatStat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Repair Category:"
                android:visibility="gone"
                android:textColor="@color/colorblack"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/reqSDateDynamicPast" />

            <TextView
                android:id="@+id/acceptedRepairCatDynamicPast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textColor="@color/colorblack"
                android:textSize="15sp"
                android:visibility="gone"
                android:textStyle="italic"
                app:layout_constraintStart_toEndOf="@+id/acceptedRepairCatStat"
                app:layout_constraintTop_toBottomOf="@+id/serviceDateStatic" />


            <TextView
                android:id="@+id/bookingIdDynamicPast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="#1007"
                android:textColor="@color/colorblack"
                android:textSize="15sp"
                android:textStyle="italic"
                app:layout_constraintStart_toEndOf="@+id/serviceTypeStatic"
                app:layout_constraintTop_toBottomOf="@+id/rating" />

            <TextView
                android:id="@+id/reqSTypeDynamicPast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Repair"
                android:textColor="@color/colorblack"
                android:textSize="15sp"
                android:textStyle="italic"
                app:layout_constraintStart_toEndOf="@+id/serviceTypeStatic"
                app:layout_constraintTop_toBottomOf="@+id/riderNumberS" />

            <TextView
                android:id="@+id/reqSDateDynamicPast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="23 July 2019"
                android:textColor="@color/colorblack"
                android:textSize="15sp"
                android:textStyle="italic"
                app:layout_constraintStart_toEndOf="@+id/serviceDateStatic"
                app:layout_constraintTop_toBottomOf="@+id/serviceTypeStatic" />

            <!--repair detail text view-->
            <TextView
                android:id="@+id/repairDetailStatic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Repair Description:"
                android:textColor="@color/colorblack"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/acceptedRepairCatDynamicPast" />

            <TextView
                android:id="@+id/reqRepairDetialDynamicPast"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Bike break pads change"
                android:textColor="@color/colorblack"
                android:textSize="15sp"
                android:visibility="gone"
                android:textStyle="italic"
                app:layout_constraintStart_toEndOf="@+id/repairDetailStatic"
                app:layout_constraintTop_toBottomOf="@+id/acceptedRepairCatStat"
                app:layout_constraintEnd_toEndOf="parent"/>

            <EditText
                android:id="@+id/bookingLeaveNotePast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Leave Note to Customer"
                android:layout_marginEnd="5sp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/reqRepairDetialDynamicPast"
                app:layout_constraintEnd_toStartOf="@+id/btnLeaveNote"
                app:layout_constraintStart_toStartOf="parent"
                android:focusedByDefault="false"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>