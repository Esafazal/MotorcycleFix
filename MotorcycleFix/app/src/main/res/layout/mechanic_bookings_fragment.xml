<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MechanicFragments.BookingsFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="240sp"
        android:layout_margin="5sp"
        app:cardElevation="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/bookingBikeModel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20sp"
                android:text="Hero Hunk 2011"
                android:textColor="@color/colorblack"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/bookingRiderName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Esa Fazal"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bookingBikeModel" />

            <TextView
                android:id="@+id/serviceTypeStatic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Service Type: "
                android:textColor="@color/colorblack"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bookingRiderName" />

            <TextView
                android:id="@+id/serviceDateStatic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Service Date: "
                android:textColor="@color/colorblack"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/serviceTypeStatic" />

            <TextView
                android:id="@+id/serviceTypeDynamic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Repair"
                android:textColor="@color/colorblack"
                android:textSize="15sp"
                android:textStyle="italic"
                app:layout_constraintStart_toEndOf="@+id/serviceTypeStatic"
                app:layout_constraintTop_toBottomOf="@+id/bookingRiderName" />

            <TextView
                android:id="@+id/serviceDateDynamic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="23 July 2019"
                android:textColor="@color/colorblack"
                android:textSize="15sp"
                android:textStyle="italic"
                app:layout_constraintStart_toEndOf="@+id/serviceDateStatic"
                app:layout_constraintTop_toBottomOf="@+id/serviceTypeStatic" />

            <!--repair detail text view-->
            <TextView
                android:id="@+id/repairDetailStatic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Repair Detail: "
                android:textColor="@color/colorblack"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/serviceDateStatic" />

            <TextView
                android:id="@+id/repairDetialDynamic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Bike break pads change"
                android:textColor="@color/colorblack"
                android:textSize="15sp"
                android:textStyle="italic"
                app:layout_constraintStart_toEndOf="@+id/serviceDateStatic"
                app:layout_constraintTop_toBottomOf="@+id/serviceDateStatic" />

            <EditText
                android:id="@+id/bookingLeaveNote"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:hint="Leave Note to Customer"
                android:layout_marginEnd="5sp"
                app:layout_constraintTop_toBottomOf="@+id/repairDetailStatic"
                app:layout_constraintEnd_toStartOf="@+id/btnLeaveNote"
                app:layout_constraintStart_toStartOf="parent"
                android:focusedByDefault="false"/>

            <Button
                android:id="@+id/btnLeaveNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/rounded_button"
                android:text="Send"
                android:textAllCaps="false"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/bookingCompleteService"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/bookingLeaveNote"/>

            <Button
                android:id="@+id/bookingStartService"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:background="@color/green"
                android:text="Start Service"
                android:layout_margin="5sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/guideline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bookingLeaveNote" />

            <Button
                android:id="@+id/bookingCompleteService"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:background="@color/dimRed"
                android:text="Completed"
                android:clickable="false"
                android:layout_margin="5sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/guideline"
                app:layout_constraintTop_toBottomOf="@+id/bookingLeaveNote" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5"
                app:layout_constraintGuide_begin="197dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>